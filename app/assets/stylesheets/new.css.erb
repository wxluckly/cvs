@charset "utf-8";

.user-login a,
.site-nav__item a{ font-family: "Microsoft YaHei";}
.news_banner{ text-align:center;}
.news_banner img{ width: 100%;}
.news_box{ width: 100%; margin-top: 6%; margin-bottom: 10%;}
.news_link{ width: 25%; float: left; text-align: center; margin-bottom: 10px;}
.news_link:last-child span{background: none;}
.news_link p{ margin-bottom: 0;}
.news_link a{ color: #01dcd9; display: block; text-decoration: none;}
.news_link a:hover{ text-decoration: none; color: #ff9e16;}
.news_link span{ font-size: 136px; color: #01dcd9; display: block; background: url('<%= image_url "line.jpg" %>') right center no-repeat; background-size: 2px 60%;}
.news_link a:hover span{ color: #ff9e16;}
.news_link b{ padding-top: 9%; width: 40%; display: inline-block; font: bold 14px/20px "Microsoft YaHei";}



@media (max-width:55em){
	.news_box{ margin-top: 7%;}
	.news_link{ width: 25%;}
	.news_link span{ font-size: 90px;}
	.news_link b{ padding-top: 9%; width: 50%;}
}
@media (max-width:640px){
	.news_link{ width: 25%;}
	.news_link span{ font-size: 70px;}
}
@media (max-width:480px){
	.news_box{ margin-top: 8%;}
	.news_banner{padding-top: 30px;}
	.news_link{ width: 25%;}
	.news_link span{ font-size:50px;}
	.news_link b{ padding-top: 5%; width: 46%;}
	.index-block-list{padding:0 1.9%;}
}

@media (max-width:320px){
	.news_banner{padding-top: 18%;}
	.news_link{ width: 25%;background: none;}
	.news_link b{width: 80%;}
}