@charset "utf-8";

@font-face {
	font-family: 'icomoon';
	src:url('<%= image_url "icomoon.eot" %>-3yyfji');
	src:url('<%= image_url "icomoon.eot" %>?#iefix-3yyfji') format('embedded-opentype'),
		url('<%= image_url "icomoon.woff" %>?-3yyfji') format('woff'),
		url('<%= image_url "icomoon.ttf" %>?-3yyfji') format('truetype'),
		url('<%= image_url "icomoon.svg" %>?-3yyfji#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

[class^="icon-"], [class*=" icon-"] {
	font-family: 'icomoon';
	speak: none;
	font-style: normal;
	font-weight: normal;
	font-variant: normal;
	text-transform: none;
	line-height: 1;

	/* Better Font Rendering =========== */
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}

.icon-bag:before {
	content: "\e600";
}
.icon-earth:before {
	content: "\e601";
}
.icon-gift:before {
	content: "\e602";
}
.icon-people:before {
	content: "\e603";
}

.news_banner{ text-align:center;padding-top: 12%;}
.news_banner img{ width: 100%;}
.news_box{ width: 100%; margin-top: 6%; margin-bottom: 10%;}
.news_link{ width: 25%; float: left; text-align: center; margin-bottom: 10px; background: url('<%= image_url "line.jpg" %>') right 20% no-repeat; background-size: auto 40%;}
.news_link:last-child{background: none;}
.news_link p{ margin-bottom: 0;}
.news_link a{ color: #01dcd9; display: block;}
.news_link a:hover{ text-decoration: none; color: #ff9e16;}
.news_link span{ font-size: 136px; color: #01dcd9;}
.news_link a:hover span{ color: #ff9e16;}
.news_link b{ padding-top: 9%; width: 40%; display: inline-block; font: bold 14px/20px "Microsoft YaHei";}
@media (max-width:55em){
	.news_box{ margin-top: 7%;}
	.news_banner{ padding-top: 18%;}
	.news_link{ width: 25%;}
	.news_link span{ font-size: 90px;}
	.news_link b{ padding-top: 9%; width: 50%;}
}
@media (max-width:640px){
	.news_banner{ padding-top: 16%;}
	.news_link{ width: 25%;}
	.news_link span{ font-size: 70px;}
}
@media (max-width:480px){
	.news_box{ margin-top: 8%;}
	.news_banner{ padding-top: 28%;}
	.news_link{ width: 25%; background: url('<%= image_url "line.jpg" %>') right 6% no-repeat; background-size: auto 20%;}
	.news_link span{ font-size:50px;}
	.news_link b{ padding-top: 5%; width: 46%;}
}

@media (max-width:320px){
	.news_banner{ padding-top: 34%;}
	.news_link{ width: 50%;background: none;}
	.news_link b{width: 40%;}
}