<div class="site">
  <div class="site-container">    
    <div id="skip-link">
      <a href="#main-content" class="element-invisible element-focusable">Skip to main content</a>
    </div>
    <%= render "header" %>
    <header class="page-title" style="background-image: url('http://www.vegansociety.com/sites/default/files/whats-new.jpg');">
      <div class="skew">
        <div class="container">
          <h1>
            <%= @node.title %> 
          </h1>
        </div>
      </div>
    </header>
    <section class="page basic">  
      <div class="container">
        <div class="page-content">
          <div class="custom-breadcrumbs">
            <h2 class="element-invisible">你在这：</h2>
            <div class="breadcrumb">
              <a href="/">首页</a>
              <% if @node.ancestors[1, 100].present? %>
              <% @node.ancestors[1, 100].each do |parent| %>
              » <a href="/nodes/<%= parent.id %>"><%= parent.title %></a>
              <% end %>
              <% end %>
            </div> » <%= @node.title %>            
          </div>
          <div class="region region-content">
            <div id="node-<%= @node.id %>" class="node node-campaign node-promoted node-full clearfix" about="/whats-new/campaigns/love-vegan" typeof="sioc:Item foaf:Document">
              <div class="content clearfix">
                <div class="field field-name-body field-type-text-with-summary field-label-hidden">
                  <div class="field-items">
                    <div class="field-item even" property="content:encoded">
                      <%= raw @node.content %>
                    </div>
                  </div>
                </div>  
              </div>
            </div>
          </div>
        </div>

        <aside class="page-sidebar--right">
          <div class="sub-nav"> 
            <div class="region region-sidebar-menu">
              <h2>目录</h2>

              <div class="menu-block-wrapper menu-block-1 menu-name-main-menu parent-mlid-0 menu-level-2">
                <% if @node.parent %>
                <ul class="menu clearfix">
                  <li class="first expanded active-trail active menu-mlid-1037"><a href="/nodes/<%= @node.id %>" title=""><%= @node.title %></a>
                    <% end %>
                    <ul class="menu clearfix">
                      <li class="first leaf active-trail active menu-mlid-2560"><a href="/nodes/<%= @node.id %>" title=""><%= @node.title %></a></li>
                      <% @node.siblings.each do |sib| %>
                      <li class="leaf menu-mlid-2560"><a href="/nodes/<%= sib.id %>" title=""><%= sib.title %></a></li>
                      <% end %>
                    </ul>
                    <% if @node.parent %>
                  </li>
                  <% @node.parent.siblings.each do |sib| %>
                  <li class="collapsed menu-mlid-2030"><a href="/nodes/<%= sib.id %>" title=""><%= sib.title %></a></li>
                  <% end %>
                </ul>
                <% end %>
              </div>
            </div>
          </div>
          <div class="banner__panel">
            <div class="region region-sidebar-banners">
              <div id="banner"><a class="link" href="/shop/supplements"><%= image_tag "origin/VEG1_426_new.png", alt:"The Vegan Shop" %></a>
              </div>  
            </div>
          </div>        
        </aside>
      </div>
    </section>
    <%= render "info_social" %>
    <%= render "footer" %>
  </div>
  <%= render "mobile_nav_list" %>
  <%= javascript_include_tag 'origin/js_Dpwj9_' %> 
</div>
<%= render "cbox_overlay" %>