<div class="site">
  <div class="site-container">    
    <div id="skip-link">
      <a href="#main-content" class="element-invisible element-focusable">Skip to main content</a>
    </div>
    <%= render "header" %>
    <header class="page-title" style="background-image: url('http://www.vegansociety.com/sites/default/files/take-action_0.jpg');">
      <div class="skew">
        <div class="container">
          <h1>
            <%= @node.title %> 
          </h1>
        </div>
      </div>
    </header>
    <section class="page">  
      <div class="container">

        <div class="block-list list1">
          <div class="region region-content">

            <div id="node-4" class="node node-list1 node-full clearfix" about="/take-action" typeof="sioc:Item foaf:Document">

              <div class="content clearfix">
                <div class="field field-name-body field-type-text-with-summary field-label-hidden"><div class="field-items"><div class="field-item even" property="content:encoded"><h2>Be a part of the solution!</h2>
                  <p>Some of the things you can do to help advance veganism in a positive and significant way.</p>
                </div></div></div>

                <% @node.children.each do |node| %>
                <div class="block-list__panel">
                  <div class="block-list__image">
                    <a href="/nodes/<%= node.id %>"><%= node.cover_url(:on_use), width: 724, height: 352, typeof: "foaf:Image" %></a>      
                  </div>  
                  <h2 class="block-list__title">
                    <a href="/nodes/<%= node.id %>"><%= node.title %></a>
                  </h2> 
                  <div class="block-list__excerpt">
                    <p><%= node.desc %> <a href="/nodes/<%= node.id %>" class="more-link">(阅读更多)</a></p>
                  </div>  
                </div>
                <% end %>

              </div>
            </div>
          </div>
        </div>
      </div>   
    </section>
    <%= render "info_social" %>
    <%= render "footer" %>
  </div>
  <%= render "mobile_nav_list" %>
  <%= javascript_include_tag 'origin/js_Dpwj9_' %>
</div>
<%= render "cbox_overlay" %>