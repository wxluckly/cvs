<%= link_to '添加', new_admin_product_path(category: params[:category]), class: 'pull-right btn btn-warning' %>
<% if @products.present? %>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>商品标识码</th>
      <th>价格</th>
      <th>库存</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= product.sku %></td>
      <td><%= product.price %></td>
      <td><%= product.stock %></td>
      <td>
        <%= link_to '编辑', edit_admin_product_path(product, category: params[:category]) %>
        <%= link_to '删除', admin_product_path(product, category: params[:category]), method: :delete, data: { confirm: '确定删除吗?' } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @products %>
<% else %>
<div>
 暂无内容
</div>
<% end %>
