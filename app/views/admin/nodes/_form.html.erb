<%= simple_form_for(@node, as: "node", url: @node.new_record? ? admin_nodes_path : admin_node_path(@node), html: {class: "form-horizontal"}) do |f| %>
<% @node.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
<%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
<%= f.input :title, label: '标题' %>

<%= f.input :content, label: '内容' %>

<%= f.input :banner_type, label: '页头图片' %>

<div class="control-group">
  <div class="controls">
    <%= f.button :submit, "保存" %>
  </div>
</div>
<% end %>
<% content_for :script do %>
<script>
  $(function(){
    var editor;
    KindEditor.ready(function(K) {
      editor = K.create('#node_content', {
        filterMode  : false,
        width       : '782px',
        height      : '482px'
      });
    });
  })
</script>
<% end %>