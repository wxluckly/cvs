<%= link_to '添加', new_admin_node_path(category: params[:category]), class: 'pull-right btn btn-warning' %>
<% if @nodes.present? %>
<table class="table table-bordered">
  <thead>
    <tr>
      <th><div class="text-center">类型<div></th>
      <th>标题</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @nodes.each do |node| %>
    <tr>
      <td><div class="text-center"><i class="<% if node.page_type == "show" %>icon-file<% else %>icon-list<% end %>"></i><div></td>
      <td><%= link_to node.title, node, target: "_blank" %></td>
      <td>
        <%= link_to '编辑', edit_admin_node_path(node, category: params[:category]) %>
        <%= link_to '删除', admin_node_path(node, category: params[:category]), method: :delete, data: { confirm: '确定删除吗?' } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @nodes %>
<% else %>
<div>
 暂无内容
</div>
<% end %>
